Option Explicit

Sub escnums()

    Dim m As Long
    Dim col As Long
    Dim fil As Long
    
    m = InputBox("m")
    col = InputBox("desde qué columna")
    fil = InputBox("desde qué fila")

    Call ponnums("hoja1", m, fil, col)

End Sub

Sub ponnums(archivo, m, fil, col)

    Dim i As long
    Dim j As long
    Dim k As long
    Dim p As long
    
    Worksheets(archivo).Select
    
    p = (Int(m / 7))
    k = 1
    
    For j = cols To 7
        Cells(fil, j) = k
        k = k + 1
    Next j
    
    fil = fil + 1
    
    For i = fil To fil + p
        For j = 1 To 7
            If (k <= m) Then
                Cells(i, j) = k
            End If
            k = k + 1
        Next j
    Next i
End Sub


