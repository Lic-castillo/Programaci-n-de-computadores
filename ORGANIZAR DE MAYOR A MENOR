Option Explicit
Sub Main()
    Dim i As Long
    Dim k As Long
    Dim posicion As Long
    Dim n(15) As Double
    Dim mayor As Double
    Dim aux As Double
    
    Worksheets("hoja1").Select
    For i = 1 To 15
        n(i) = Cells(i, 1)
    Next i
    
    For k = 1 To 15
        mayor = n(k)
        posicion = k
        For i = k To 15
            If n(i) > mayor Then
                mayor = n(i)
                posicion = i
            End If
        Next i
    
        aux = n(k)
        n(k) = n(posicion)
        n(posicion) = aux
    Next k
    
    MsgBox "el mayor es " & mayor & " está en la posición " & posicion
    
        Worksheets("hoja2").Select
    For i = 1 To 15
        Cells(i, 1) = n(i)
    Next i
    
End Sub

