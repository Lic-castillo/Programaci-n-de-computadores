Option Explicit
Sub senocongoto()
    Dim x As Long
    
    x = InputBox("Inserte el valor de x")
    
    MsgBox "El valor de seno en radianes es " & seno(x)
End Sub

Function seno(x)
    Dim n As Long
    Dim TermSig As Double
    Dim suma As Double
    Dim delta As Double
    
    delta = 0.00000001
    
    suma = 0
    n = 0
continue1:
        TermSig = (-1) ^ (n + 1) * (x + 1) ^ (n) / (n)
        suma = suma + TermSig
        
        n = n + 1
    If (Abs(TermSig) >= delta) Then GoTo continue1
    
    seno = suma
End Function

